CSRF_TRUSTED_ORIGINS=https://api.safecare.vn,http://localhost:8001
CORS_ALLOWED_ORIGINS=https://api.safecare.vn,http://localhost:8001

MONGO_URI=mongodb://root:root@mongo:27017/auth_dev?authSource=admin
MONGO_DB=auth_dev

JWT_SECRET=replace-with-strong-secret
JWT_ACCESS_MINUTES=15
JWT_ISSUER=safecare-auth
JWT_AUDIENCE=safecare-api

COOKIE_DOMAIN=.safecare.vn
COOKIE_SECURE=0
COOKIE_SAMESITE=Lax

GOOGLE_CLIENT_ID=
