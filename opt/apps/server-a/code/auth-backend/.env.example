APP_NAME=auth
APP_ENV=development
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
ALLOWED_HOSTS=localhost,api.safecare.vn
BASE_PATH=/auth
FORCE_SCRIPT_NAME=/auth
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
